

System.out.println(add("1,2,3,4,5")); // Output: 15

System.out.println(add(" 1 , 2 , 3 ")); // Output: 6

System.out.println(add("1\n2\n3")); // Output: 6

System.out.println(add("1\n2,3")); // Output: 6

System.out.println(calculator.add("//;\n1;2;3")); // Output: 6

System.out.println(add("//@\n2@3@4")); // Output: 9

System.out.println(add("//.\n1.2.3")); // Output: 6

System.out.println(add("1000,2000,3000")); // Output: 6000

System.out.println(add("1,,2,,3")); // Output: 6

System.out.println(add("//[***]\n1***2***3")); // Output: 6

System.out.println(add("//-\n1-2\n3")); // Output: 6

System.out.println(add(null)); // Output: 0

System.out.println(add("//;\n")); // Output: 0

System.out.println(add("//;\n1;2\n3,4\n5")); // Output: 15

System.out.println(add("//#\n")); // Output: 0

System.out.println(add("//[*]\n1*2*3\n4,5,-6\n7,-8")); // output -6, -8

System.out.println(add("//[*]\n1*2*3\n4,5,-6\n7,8")); // output negative number not allowed -6
